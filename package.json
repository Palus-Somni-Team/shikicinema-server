{
  "name": "shikicinema-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "BSD-2-Clause",
  "scripts": {
    "up-dev-db": "docker-compose up shikicinema-db dev-migrations",
    "up-test-db": "docker-compose up shikicinema-db test-migrations",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "NODE_ENV=testing jest --watch",
    "test:cov": "NODE_ENV=testing jest --coverage",
    "test:debug": "NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=testing jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.4.4",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/typeorm": "^7.1.3",
    "@types/sqlite3": "^3.1.6",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "connect-typeorm": "^1.1.4",
    "express-session": "^1.17.1",
    "liquibase": "^1.0.1",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "sqlite3": "^5.0.0",
    "typeorm": "^0.2.25",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.1",
    "@nestjs/testing": "^7.4.4",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/jest": "26.0.13",
    "@types/node": "^14.6.4",
    "@types/passport-http-bearer": "^1.0.36",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "dotenv": "^8.2.0",
    "eslint": "7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "26.4.2",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "moduleNameMapper": {
      "@shikicinema": [
        "<rootDir>/lib/shikicinema/index.ts"
      ],
      "@utils/(.*)": [
        "<rootDir>/src/utils/$1"
      ],
      "dist/(.*)": [
        "<rootDir>/dist/$1"
      ]
    },
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
