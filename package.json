{
  "name": "shikicinema-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "BSD-2-Clause",
  "engineStrict": true,
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "scripts": {
    "up-dev-db": "docker-compose up shikicinema-db dev-migrations",
    "migrate": "node liquibase.js",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"**/*.{ts,js}\"",
    "lint:fix": "eslint \"**/*.{ts,js}\" --fix",
    "test": "cross-env NODE_ENV=testing jest --config ./test/jest-common-config.ts",
    "test:watch": "cross-env NODE_ENV=testing jest --watch --config ./test/jest-common-config.ts",
    "test:cov": "cross-env NODE_ENV=testing jest --coverage --config ./test/jest-common-config.ts",
    "test:debug": "cross-env NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-common-config.ts",
    "test:e2e": "cross-env NODE_ENV=testing jest --config ./test/jest-e2e-config.ts",
    "seed:generate": "typeorm migration:create -d seeds -n "
  },
  "dependencies": {
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^8.4.7",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.1.4",
    "@types/sqlite3": "^3.1.8",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-typeorm": "^2.0.0",
    "express-session": "^1.17.3",
    "liquibase": "^1.0.1",
    "nest-router": "^1.0.9",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "sqlite3": "^5.0.10",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.10",
    "@nestjs/testing": "^8.4.4",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jest": "27.4.1",
    "@types/node": "^17.0.24",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "27.5.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.2",
    "ts-jest": "27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "moduleNameMapper": {
      "@lib-shikicinema": [
        "<rootDir>/lib/shikicinema/index.ts"
      ],
      "@app-utils/(.*)": [
        "<rootDir>/src/utils/$1"
      ],
      "@app-entities": [
        "<rootDir>/src/entities/index.ts"
      ],
      "dist/(.*)": [
        "<rootDir>/dist/$1"
      ]
    },
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/main.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
