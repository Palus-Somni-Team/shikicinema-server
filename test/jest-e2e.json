{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "..",
    "moduleNameMapper": {
        "@lib-shikicinema": [
            "<rootDir>/lib/shikicinema/index.ts"
        ],
        "@app-utils/(.*)": [
            "<rootDir>/src/utils/$1"
        ],
        "dist/(.*)": [
            "<rootDir>/dist/$1"
        ]
    },
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    }
}
